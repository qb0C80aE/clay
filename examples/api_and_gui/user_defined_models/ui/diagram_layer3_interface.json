{
  "type_name": "DiagramLayer3Interface",
  "resource_name": "diagram_layer3_interfaces",
  "to_be_migrated": false,
  "is_controller_enabled": true,
  "is_design_access_disabled": true,
  "fields": [
    {
      "name": "Name",
      "tag": "json:\"name\" yaml:\"name\"",
